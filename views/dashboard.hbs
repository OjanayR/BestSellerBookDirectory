<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your book reviews</p>
{{#if reviews}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each reviews}}
        <tr>
            <td><a href= "/reviews/{{_id}}"></a>{{title}}</td>
            <td>{{createAt}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not submitted a book review</p>
{{/if}}